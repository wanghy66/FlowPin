<Window x:Class="FlowPin.App.UI.StartupToastWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="280"
        Height="76"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ShowActivated="False"
        ResizeMode="NoResize"
        Topmost="True">
    <Border CornerRadius="10"
            Background="#F0FCFDFF"
            BorderBrush="#D5E4FA"
            BorderThickness="1"
            Padding="10,8">
        <StackPanel VerticalAlignment="Center">
            <TextBlock x:Name="TitleText"
                       FontSize="13.5"
                       FontWeight="Bold"
                       Foreground="#223A5E"
                       TextAlignment="Left"
                       HorizontalAlignment="Left" />
            <TextBlock x:Name="BodyText"
                       Margin="0,3,0,0"
                       FontSize="12"
                       Foreground="#3E5F8C"
                       TextAlignment="Left"
                       HorizontalAlignment="Left"
                       TextWrapping="Wrap" />
        </StackPanel>
    </Border>
</Window>
