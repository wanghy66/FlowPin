<Window x:Class="FlowPin.App.UI.AnchorOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="20"
        Height="20"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ShowActivated="False"
        ResizeMode="NoResize"
        Topmost="True">
    <Viewbox Stretch="Fill" IsHitTestVisible="False">
        <Grid Width="20" Height="20">
            <Ellipse x:Name="RingEllipse" Stroke="#883FA9FF" StrokeThickness="1.5" Fill="#24203040" />
            <Ellipse x:Name="CenterDot" Width="4" Height="4" Fill="#CC3FA9FF" />
            <Polygon x:Name="UpTriangle"
                     Points="10,2.5 6.5,8.5 13.5,8.5"
                     Fill="#CC000000"
                     Opacity="0.95"
                     RenderTransformOrigin="0.5,0.5">
                <Polygon.RenderTransform>
                    <RotateTransform x:Name="UpTriangleRotate" Angle="0" />
                </Polygon.RenderTransform>
            </Polygon>
            <Polygon x:Name="DownTriangle"
                     Points="10,17.5 6.5,11.5 13.5,11.5"
                     Fill="#CC000000"
                     Opacity="0.95" />
        </Grid>
    </Viewbox>
</Window>

